{
    "version": 2,
    "configurePresets": [
        {
            "name": "ninja-base",
      "displayName": "Ninja (base)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-ninja",
      "environment": {
        "VCPKG_DOWNLOADS": "${sourceDir}/.vcpkg/downloads",
        "VCPKG_DEFAULT_BINARY_CACHE": "${sourceDir}/.vcpkg/bincache"
      },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_MAKE_PROGRAM": "${sourceDir}/.vcpkg/tools/ninja/ninja.exe",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
        },
        {
            "name": "ninja-debug",
            "displayName": "Ninja Debug",
            "inherits": "ninja-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "ninja-release",
            "displayName": "Ninja Release",
            "inherits": "ninja-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Debug",
            "description": "",
            "displayName": "",
            "configurePreset": "ninja-debug"
        }
    ]
}
